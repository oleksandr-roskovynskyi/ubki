{
  "name": "wearesho-team/ubki",
  "description": "UBKI Integration for PHP",
  "type": "library",
  "require": {
    "ext-SimpleXML": "*",
    "guzzlehttp/guzzle": "^6.3",
    "horat1us/environment-config": "^1.2",
    "myclabs/php-enum": "^1.6.4",
    "nesbot/carbon": "^1.36",
    "psr/log": "^1.0",
    "psr/simple-cache": "^1.0",
    "wearesho-team/base-collection": "^1.0"
  },
  "require-dev": {
    "chillerlan/php-cache": "^1.0",
    "gamez/psr-testlogger": "^2.0",
    "phpunit/phpunit": "^7.1",
    "squizlabs/php_codesniffer": "^3.2"
  },
  "keywords": [
    "ubki",
    "ucb",
    "uchb",
    "credit bureau",
    "убки",
    "бки",
    "bobra"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Letnikow",
      "email": "reclamme@gmail.com",
      "role": "Lead"
    },
    {
      "name": "Roman Varkuta",
      "email": "roman.varkuta@gmail.com",
      "role": "Developer"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Wearesho\\Bobra\\Ubki\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\Bobra\\Ubki\\Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 1800,
    "sort-packages": true,
    "platform": {
      "php": "7.1"
    }
  },
  "scripts": {
    "lint": "phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
    "cover": "phpunit --coverage-clover=coverage.xml",
    "test": "phpunit"
  }
}
